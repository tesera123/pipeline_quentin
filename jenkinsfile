pipeline {
    agent {
            label 'docker_node'
    }
    stages {

        stage('demarrage test') {
            steps {
                sh 'docker run hello-world'
            }
        }
        stage('execute docker') {
            steps {
                sh 'docker build -t my_server:latest - < Dockerfile'
            }
        stage('demarrage du conteneur'){
            steps{
                sh 'docker run -p 80:8090 -d --name serveur image:my_server'
                sh 'This is my super app" = "$(curl http://localhost:<port>/)"'
                sh 'docker rm -f serveur'
            }
        }



        }
    }
}
